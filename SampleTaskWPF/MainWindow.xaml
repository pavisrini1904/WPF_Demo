<Window x:Class="SampleTaskWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleTaskWPF"
        mc:Ignorable="d"
        WindowState="Maximized" Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.Resources>
            <Style x:Key="MainStackPanelStyle" TargetType="StackPanel">
                <Setter Property="Background" Value="#F7F7F7"></Setter>
                <Setter Property="Height" Value="300"></Setter>
                <Setter Property="Width" Value="350"></Setter>
            </Style>
            <Style x:Key="StackPanelStyle" TargetType="StackPanel">
                <Setter Property="Background" Value="{StaticResource LightGrayColor}"></Setter>
                <Setter Property="Margin" Value="30,30"></Setter>
            </Style>
            <Style x:Key="LoginPageTextBoxStyle" TargetType="TextBox">
                <Setter Property="Height" Value="30"></Setter>
                <Setter Property="FontSize" Value="17"></Setter>
            </Style>
            <Style x:Key="LoginPageLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="18"></Setter>
            </Style>
            <Style x:Key="BorderStyle" TargetType="{x:Type Border}">
                <Setter Property="CornerRadius" Value="5"></Setter>
            </Style>
            <Style x:Key="LoginButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource LightGreenColor}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Margin" Value="0,20"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="Height" Value="40"/>
            </Style>
        </Grid.Resources>
        <Image Source="Images\img_logo_trient.png" MaxHeight="40" VerticalAlignment="Top"/>
        <Grid VerticalAlignment="Center" Margin="0,60" >
            <Border BorderBrush="#D8D8D8" BorderThickness="1" Style="{StaticResource BorderStyle}">
                <StackPanel Style="{StaticResource MainStackPanelStyle}">
                    <StackPanel Style="{StaticResource StackPanelStyle}">
                        <Label Content="Email ID" Style="{StaticResource LoginPageLabelStyle}"></Label>
                        <TextBox Style="{StaticResource LoginPageTextBoxStyle}">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <Label Content="ID" Style="{StaticResource LoginPageLabelStyle}"></Label>
                        <TextBox Style="{StaticResource LoginPageTextBoxStyle}">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <Label Content="Shop ID" Style="{StaticResource LoginPageLabelStyle}"></Label>
                        <TextBox Style="{StaticResource LoginPageTextBoxStyle}">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="3"/>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                        <Button Content="Login" Style="{StaticResource LoginButtonStyle}" Click="Button_Click">
                            <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="3"/>
                                    </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                    
                </StackPanel>
            </Border>
        </Grid>


    </Grid>
</Window>
